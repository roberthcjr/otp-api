{
  "name": "otp-api",
  "version": "1.0.0",
  "description": "An API to generate and validate OTP ",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --legacy-watch --exec ts-node -r tsconfig-paths/register src/index.ts",
    "services:up": "docker compose -f ./infra/compose.yml up -d",
    "services:down": "docker compose -f ./infra/compose.yml down",
    "services:watch": "docker compose -f ./infra/compose.yml up --watch",
    "postservices:watch": "docker compose -f ./infra/compose.yml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "prisma:migrate": "prisma migrate dev",
    "migrate:start:dev": "npm run prisma:migrate && npm run dev",
    "test": "npm run services:up && sleep 5 && dotenv -e .env -- jest",
    "posttest": "npm run services:down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roberthcjr/otp-api.git"
  },
  "keywords": [
    "otp",
    "API",
    "express"
  ],
  "author": "Robert Carvalho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/roberthcjr/otp-api/issues"
  },
  "homepage": "https://github.com/roberthcjr/otp-api#readme",
  "dependencies": {
    "@prisma/client": "6.14.0",
    "dotenv-expand": "12.0.2",
    "express": "5.1.0",
    "express-rate-limit": "8.0.1",
    "otpauth": "9.4.1",
    "prisma": "6.14.0",
    "swagger-ui-express": "5.0.1"
  },
  "devDependencies": {
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/node": "24.2.1",
    "dotenv-cli": "10.0.0",
    "jest": "30.0.5",
    "nodemon": "3.1.10",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2"
  }
}
