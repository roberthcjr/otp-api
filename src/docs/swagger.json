{
  "openapi": "3.0.0",
  "info": {
    "title": "Token API",
    "version": "1.0.0",
    "description": "API para geração e validação de OTP baseado em email."
  },
  "servers": [
    {
      "url": "http://localhost:3500"
    }
  ],
  "paths": {
    "/token/generate": {
      "post": {
        "summary": "Gera um OTP para o email informado",
        "operationId": "generateOtp",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "robe3@email.com"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OTP gerado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "otp": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "email": "robe3@email.com",
                    "otp": "945126"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "string"
                        },
                        "message": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "example": {
                    "error": {
                      "code": "SERVER_ERROR",
                      "message": "Unexpected error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/token/validate": {
      "post": {
        "summary": "Valida o OTP enviado para o email",
        "operationId": "validateOtp",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "code": {
                    "type": "string"
                  }
                },
                "required": [
                  "email",
                  "code"
                ],
                "example": {
                  "email": "robe3@email.com",
                  "code": "550822"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP validado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "isVerified": {
                      "type": "boolean"
                    }
                  },
                  "example": {
                    "email": "robe3@email.com",
                    "isVerified": true
                  }
                }
              }
            }
          },
          "400": {
            "description": "OTP inválido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "string"
                        },
                        "message": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "example": {
                    "error": {
                      "code": "OTP_INVALID",
                      "message": "OTP is invalid"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "string"
                        },
                        "message": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "example": {
                    "error": {
                      "code": "SERVER_ERROR",
                      "message": "Unexpected error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}